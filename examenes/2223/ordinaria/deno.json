{
  "compilerOptions": {
    "allowJs": false,
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "no-implicit-any",
        "explicit-function-return-type"
      ],
      "exclude": ["no-debugger", "no-console", "no-explicit-any"]
    }
  },
  "tasks": {
    "start": "deno run -A src/main.ts",
    "dev": "deno run -A --watch src/main.ts",
    "inspect": "deno run -A --inspect=0.0.0.0:9229 src/main.ts"
  },
  "importMap": "./import_map.json"
}
